@model FlashcardApp.ViewModels.ProfileViewModel

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Your Profile</h3>
            <a asp-action="EditProfile" class="btn btn-light text-primary">
                <i class="fas fa-edit"></i> Edit Profile
            </a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h4 class="font-weight-bold">@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">@Model.Email</p>
                    <hr>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <strong>First Name: </strong> @Model.FirstName
                        </li>
                        <li class="mb-2">
                            <strong>Last Name: </strong> @Model.LastName
                        </li>
                        <li class="mb-2">
                            <strong>Email: </strong> @Model.Email
                        </li>
                        <li class="mb-2">
                            <strong>Total Cards: </strong> @Model.TaskCount
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 800px;
    }

    .card {
        border-radius: 12px;
    }

    .card-header {
        font-size: 1.5rem;
        font-weight: 600;
    }

    .font-weight-bold {
        font-size: 1.25rem;
        color: #343a40;
    }

    .text-muted {
        font-size: 1rem;
        color: #6c757d;
    }

    hr {
        border-top: 1px solid #dee2e6;
    }

    ul.list-unstyled {
        padding-left: 0;
        list-style: none;
    }

    ul.list-unstyled li {
        padding: 10px 0;
        border-bottom: 1px solid #f1f1f1;
    }

    ul.list-unstyled li:last-child {
        border-bottom: none;
    }
</style>