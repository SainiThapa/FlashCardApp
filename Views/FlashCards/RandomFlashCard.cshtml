@model FlashcardApp.ViewModels.FlashCardViewModel

@{
    ViewData["Title"] = "Random FlashCard";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm" style="width: 100%; max-width: 600px;">
        <div class="card-body">
            <h2 class="card-title text-center">@ViewData["Title"]</h2>
            <br>
            <h4 class="card-subtitle mb-2 text-muted">Category: @Model.CategoryName</h3>
            <h4 class="card-subtitle mb-2 text-muted"><strong>Question:</strong> @Model.Question</p>
            <div id="answer" class="answer-hidden" style="display: none;">
                <p class="card-text"><strong>Answer:</strong> @Model.Answer</p>
            </div>
            <div class="text-center">
                <button id="showAnswerBtn" class="btn btn-primary my-2">See Answer</button>
            </div>
            <form method="post" asp-action="RandomFlashCard" class="text-center">
                <button type="submit" class="btn btn-secondary">Next Question</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("showAnswerBtn").onclick = function() {
            document.getElementById("answer").style.display = "block";
            this.style.display = "none";
        };
    </script>
}
