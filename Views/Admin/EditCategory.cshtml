@model FlashcardApp.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-5">
    <div class="row justify-content-md-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Edit Category</h2>
            <div class="card">
                <div class="card-body">
                    <form asp-action="EditCategory">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Category Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Save" class="btn btn-lg btn-primary w-100" />
                            <a asp-action="Categories" class="btn btn-lg btn-secondary w-100 mt-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

