@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5 text-center">
    <h2>Welcome to the Admin Dashboard!</h2>
    <p class="lead">Manage users and flashcards with the options below.</p>
    
    <div class="admin-actions mt-4">
        <div class="row justify-content-center">
            <div class="col-md-4 mb-3">
                <a asp-controller="Admin" asp-action="UserList" class="btn btn-lg btn-outline-primary w-100">
                    <i class="bi bi-people"></i> View Users
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a asp-controller="Admin" asp-action="Categories" class="btn btn-lg btn-outline-primary w-100">
                    <i class="bi bi-card-list"></i> Flash Cards Categories
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a asp-controller="Account" asp-action="Logout" class="btn btn-lg btn-outline-secondary w-100">
                    <i class="bi bi-box-arrow-right"></i> Log Out
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 800px;
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 2.5rem;
        color: #343a40;
    }

    .lead {
        font-size: 1.25rem;
        color: #6c757d;
    }

    .admin-actions .btn {
        font-size: 1.1rem;
        padding: 15px 20px;
        border-radius: 5px;
        transition: all 0.2s ease;
    }

    .admin-actions .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: #fff;
    }

    .btn-outline-secondary {
        border-color: #dc3545;
        color: #dc3545;
    }

    .btn-outline-secondary:hover {
        background-color: #dc3545;
        color: #fff;
    }
</style>